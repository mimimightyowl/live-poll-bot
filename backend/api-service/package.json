{
  "name": "api-service",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "migrate": "node -r ts-node/register -r ./src/shared/env-loader node_modules/.bin/node-pg-migrate -m src/shared/infra/migrations up",
    "migrate:down": "node -r ts-node/register -r ./src/shared/env-loader node_modules/.bin/node-pg-migrate -m src/shared/infra/migrations down",
    "migrate:create": "node -r ts-node/register -r ./src/shared/env-loader node_modules/.bin/node-pg-migrate create -m src/shared/infra/migrations --migration-file-language sql",
    "docker:dev:up": "docker-compose -f ../../docker/docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f ../../docker/docker-compose.dev.yml down",
    "dev:stack": "npm run docker:dev:up && docker-compose -f ../../docker/docker-compose.dev.yml logs -f api",
    "docker:test:up": "docker-compose -f ../../docker/docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f ../../docker/docker-compose.test.yml down",
    "test:stack": "npm run docker:test:up && docker-compose -f ../../docker/docker-compose.test.yml logs -f api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "node-pg-migrate": "^7.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.0"
  }
}
